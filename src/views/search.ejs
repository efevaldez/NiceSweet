<!DOCTYPE html>
<html lang="es">
<%- include('partials/head.ejs') %> 
<body>
<%- include('partials/header.ejs') %> 
        
<!-- fin del header -->
<main>

    <% if (products.length > 0) { %>
        <h2 class="subtitle">Resultados de la búsqueda: <%= busqueda %></h2>
        <div class="container-card">
                <div class="row">
                    <!-- card1 -->
                    <% products.forEach(product => { %>
                        <a href="/products/detail/<%-product.id%> ">
                            <div class="col-md-4">
                                <div class="card">
                                  <div class="product">
                                    <img src="/images/<%- product.productImages[0].image %> " alt="" class="rounded" width="160">
                                    <h5><%- product.name %> </h5>
                                    <!-- card info -->
                                    <div class="info">
                                         <span class="text1"><%-product.description  %>  </span> 
                                    </div>
                                     <div class="cost">
                                        <span>$<%-product.price  %> </span>
                                        <div class="star">
                                            <i class="fa fa-star"></i>                                    
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                        </div>
                                    </div>
                        </a>
                                <!-- card info end -->
                            </div>
                                <!-- button for cards -->
                            <div class="button-card cursor shoe">
                                <span class="text-uppercase">Agregar al carrito</span>
                            </div>
                        </div>
                    </div>
                        
                   <% }); %> 
                   <% }else{%>
                <h2 class="subtitle">No hay resultados de la búsqueda de <%- busqueda %></h2>
            <% } %>


                   
</main>
<%- include('partials/footer.ejs') %> 
</body>
</html>