<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head.ejs') %>

<link rel="stylesheet" href="/styles/productDetail.css">
<script src="/Js/detalleProducto.js" defer></script>
<script src="/Js/validatorEmail.js" defer></script>
<body>
  <%- include('../partials/header.ejs') %>
    <main>
      <h6 class="titulo-chocolates"> NUESTROS PRODUCTOS </h6>
      <section class="seccion-uno">
          <img src="/images/<%= oneProduct.productImages[0].image%> " class="imagen-producto" alt="..." width="">
          
          <hr width="1" size="200">

          <div class="contenedor-total">
          <div class="contenedor-descripcion">
          <h5 class="card-title">
            <%- oneProduct.name %>
          </h5>
          <p class="card-text">
            <%- oneProduct.description %>
          </p>
        </div>
          <div class="contenedor-contador">
          <button type="button" id="minus" class="minus">-</button>
          <input type="number" id="count" class="input-text" readonly="true" inputmode="numeric">
          <button type="button" id="plus" class="plus">+</button>
          </div>
          <div class="boton">
            <button type="button" class="agregar-al-carrito">AGREGAR AL CARRITO <i
              class="fas fa-shopping-cart"></i></button>
          </div>
      </div>
      </section>

      <section class="seccion2">
       <article>
      <h6 class="titulo-chocolates">PRODUCTOS DESTACADOS</h6>
      <div class="container-card">
        <div class="row">
            <!-- card1 -->
            <% products.forEach(product=> { %>
                <% if (product.discount> 15) { %>
                    <a href="/products/detail/<%- product.id %>">
                        <div class="col-md-4">
                            <div class="card">
                                <div class="product">
                                    <img src="/images/<%- product.productImages[0].image %> " alt="" class="rounded"
                                        width="160">
                                    <h5><%- product.name %></h5>
                                    <!-- card info -->
                                    <div class="info">
                                        <span class="text1"><%- product.description %></span>
                                    </div>
                                    <div class="cost">
                                        <del>$<%- product.price %></del>
                                        <span>$<%- product.price - product.discount %></span>
                                    </div>
                    </a>
                    <!-- card info end -->
        </div>
        <!-- button for cards -->
        <div class="button-card cursor shoe">
            <span class="text-uppercase">Agregar al carrito</span>
        </div>
    </div>
    </div>

    <% } %>
        <% }); %>

<!-- Termina card1 -->
</div>

        </article>
      </section>
    </main>
    <%- include('../partials/footer.ejs') %> 
</body>

</html>